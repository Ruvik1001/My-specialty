<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_marginTop="3dp"
    android:layout_height="wrap_content"
    android:id="@+id/container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/vuzIco"
                android:layout_width="128dp"
                android:layout_height="100dp"
                android:src="@drawable/vuz_default"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_marginHorizontal="@dimen/small_dp"
                android:layout_marginTop="@dimen/small_dp"/>

            <TextView
                android:id="@+id/title"
                style="@style/MediumText"
                android:paddingHorizontal="@dimen/small_dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_margin="@dimen/small_dp"
                android:layout_weight="80" />

        </LinearLayout>



    </LinearLayout>


</RelativeLayout>